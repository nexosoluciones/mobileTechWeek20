<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nexosoluciones.mobileTechWeek2020">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="${app_name}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/LightTheme"
        tools:targetApi="m">

        <activity
            android:name="com.nexosoluciones.mobileTechWeek2020.activity.splash.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.nexosoluciones.mobileTechWeek2020.activity.login.LoginActivity"
            android:theme="@style/LightTheme">
        </activity>
        <activity
            android:name="com.nexosoluciones.mobileTechWeek2020.activity.register.RegisterActivity"
            android:theme="@style/LightTheme"/>
        <activity
            android:name="com.nexosoluciones.mobileTechWeek2020.activity.event.EventActivity"
            android:theme="@style/LightTheme"/>
        <activity
            android:name="com.nexosoluciones.mobileTechWeek2020.activity.course.CourseActivity"
            android:theme="@style/LightTheme"/>

    </application>

</manifest>